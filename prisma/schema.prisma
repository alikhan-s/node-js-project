generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           BigInt    @id @default(autoincrement()) // Внутренний ID
  telegramId   BigInt    @unique                       // ID из Телеграма
  username     String?
  firstName    String?
  level        UserLevel @default(JUNIOR)
  createdAt    DateTime  @default(now())
  messages     Message[]
}

model Message {
  id        BigInt   @id @default(autoincrement())
  content   String
  role      Role     // USER или MODEL
  userId    BigInt
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

enum UserLevel {
  JUNIOR
  MIDDLE
  SENIOR
}

enum Role {
  USER
  MODEL
}